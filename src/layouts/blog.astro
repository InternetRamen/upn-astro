---
import BaseHead from "../components/BaseHead.astro";
import PostLayout from "../components/PostLayout.astro";

const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={content.title || "Upcounty Prevention Network"} />
    </head>
    <body>
        <PostLayout>
            <h1 class="text-7xl">{content.title}</h1>
            <img src={content.thumbnail} width="100%"/>
            <p>{content.body}</p>
        </PostLayout>
    </body>
</html>
